@model DateTime?

<div class="form-group">
    @Html.LabelFor(m => m, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.Kendo().DateTimePickerFor(m=>m).Name("ComplitionDatepicker").Value(Model == null ? DateTime.UtcNow : Model).HtmlAttributes(new { style = "width:100%;" })        
    </div>
</div>
