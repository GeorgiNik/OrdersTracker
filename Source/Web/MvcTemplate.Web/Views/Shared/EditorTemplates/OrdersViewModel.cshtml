@model MvcTemplate.Web.ViewModels.Orders.OrdersViewModel
<div class="form form-horizontal center">
    @Html.AntiForgeryToken()
    <h4>Update Order</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.ClientEIK, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ClientEIK, new { @class = "form-control" })
        </div>
    </div>
    @Html.DisplayFor(x => x.CreatedOn)
    @Html.EditorFor(x => x.Description)
    @Html.EditorFor(x => x.Deadline)
    @Html.EditorFor(x => x.Creator)
    @Html.EditorFor(x => x.OrderPrice)
    @Html.EditorFor(x => x.PaidInAdvance)
    @Html.EditorFor(x => x.BillInCash)
    @Html.EditorFor(x => x.Receipt)
    @Html.EditorFor(x => x.PaidWithCard)
    @Html.EditorFor(x => x.Econt)
    @Html.EditorFor(x => x.PaidInCashWithoutReceipt)
    @Html.EditorFor(x => x.LeftToBePaid)

    <div class="form-group">
        @Html.LabelFor(m => m.PaidAt, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.Kendo().DateTimePickerFor(t => t.PaidAt).Name("papicker").Value(DateTime.UtcNow).Format("yyyy-MM-dd HH:mm").HtmlAttributes(new { style = "width:100%;" })
        </div>
    </div>
    @Html.EditorFor(x => x.Bonuses)
    @Html.EditorFor(x => x.DateOfComplition)
    <div class="form-group">
        @Html.LabelFor(m => m.IsComplited, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.IsComplited, new { @class = "form-control" })
        </div>
    </div>










</div>
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}
