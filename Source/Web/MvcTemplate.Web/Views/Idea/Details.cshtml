@model MvcTemplate.Web.ViewModels.Idea.IdeaListViewModel
<div class="container">
    <div class="row">
        <div class="col-md-1 info">
            <h5>@Model.VotesCount</h5>Votes<br />
            <button class="btn btn-info">Vote</button>
        </div>

        <div class="col-md-11 ">

            <h3>
                @Model.Title
            </h3>

            <p>
                @Model.Description
            </p>
            <h2>@Model.CommentsCount</h2> comments
        </div>
        <br />

    </div>
    @using (Html.BeginForm("CreateComment", "Idea", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group col-md-12">


            @Html.TextBox("ideaTitle", "Add comment..", new { @class = "form-control input-lg bigbox" })

        </div>
        <div class="form-group">

            <div class="col-md-12">
                @Html.TextBox("ideaDescription", "Your email address", new { @class = "form-control input-lg" })
            </div>
        </div>


        <div class="clearfix"></div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Post comment" />
            </div>
        </div>
    }

   
       
    }
    <nav>

        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li>
                    <a href="/Home/Index/@(Model.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                var className = "";
                if (Model.CurrentPage == i)
                {
                    className = "active";
                }
                <li class="@className"><a href="/Home/Index/@i">@i</a></li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li>

                    <a href="/Home/Index/@(Model.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

