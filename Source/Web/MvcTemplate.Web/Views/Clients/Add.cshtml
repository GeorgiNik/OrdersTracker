<h2>Add Client</h2>
@model MvcTemplate.Web.ViewModels.Client.ClientViewModel

@using (Html.BeginForm("AddClient", "Clients", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.EditorFor(x => x.Name)
    @Html.EditorFor(x => x.Address)
    @Html.EditorFor(x => x.EIK)
    @Html.Partial("_AddButtonPartial")
    
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}
