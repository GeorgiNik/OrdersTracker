@model MvcTemplate.Web.ViewModels.Home.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="container">

    @using (Html.BeginForm("PostIdea", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <h1>I suggest you...</h1>

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group col-md-12">


            @Html.TextBoxFor(m=>m.Idea.Title, "Enter your idea", new { @class = "form-control input-lg bigbox" })

        </div>
        <div class="form-group">

            <div class="col-md-12">
                @Html.TextBoxFor(m=>m.Idea.Description, "Enter description", new { @class = "form-control input-lg" })
            </div>
        </div>


        <div class="clearfix"></div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Post idea" />
            </div>
        </div>
    }
    
        @foreach (var idea in Model.Ideas)
        {
            <div class="row">
                <div class="col-md-1 info">
                    <h5>@idea.VotesCount</h5>Votes<br/>
                    <button class="btn btn-info">Vote</button>
                </div>
                
                <div class="col-md-11 ">
                    <a href="/Idea/Details/@idea.Id">
                        <h3>
                            @idea.Title
                        </h3>
                    </a>
                    <p>
                        @idea.Description
                    </p>
                    <i>@idea.CommentsCount</i> comments
                </div>
                <br/>
                
            </div>
        }
    <nav>
       
        <ul class="pagination">
            @if (Model.CurrentPage >1)
            {
                <li>
                    <a href="/Home/Index/@(Model.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                var className = "";
                if (Model.CurrentPage == i)
                {
                    className = "active";
                }
                <li class="@className"><a href="/Home/Index/@i">@i</a></li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li>

                    <a href="/Home/Index/@(Model.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>