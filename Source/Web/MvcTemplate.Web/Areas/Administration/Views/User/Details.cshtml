@using MvcTemplate.Web.Areas.Administration.ViewModels
@(Html.Kendo().Grid<UsersViewModel>().Name("grid").Columns(columns =>
      {
          columns.Bound(c => c.Id);
          columns.Bound(c => c.AuthorName);
          columns.Bound(c => c.Email);
          columns.Command(command =>
              {
                  command.Edit();
                  command.Destroy();
              }).Width(180);
      }).ToolBar(toolbar =>
          {
              toolbar.Create();
              toolbar.Excel();
              toolbar.Pdf();
          }).ColumnMenu().Editable(editable => editable.Mode(GridEditMode.InLine)).Pageable().Sortable(sortable => { sortable.SortMode(GridSortMode.MultipleColumn); }).Filterable().Scrollable().DataSource(dataSource => dataSource.Ajax().Model(model => model.Id(p => p.Id)).Read(read => read.Action("ApplicationUsers_Read", "User")).Create(create => create.Action("ApplicationUsers_Create", "User")).Update(update => update.Action("ApplicationUsers_Update", "User")).Destroy(destroy => destroy.Action("ApplicationUsers_Destroy", "User")))
      )
@section Scripts {
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jszip/2.4.0/jszip.js"></script>
}