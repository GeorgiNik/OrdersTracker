@using MvcTemplate.Web.ViewModels.Client
@using Kendo.Mvc.UI
@(Html.Kendo().Grid<ClientViewModel>().Name("grid").Columns(columns =>
      {
          columns.Bound(c => c.EIK);
          columns.Bound(c => c.Name);
          columns.Bound(c => c.Address);

          columns.Command(command =>
              {
                  command.Edit();
                  command.Destroy();
              }).Width(180);
      }).ToolBar(toolbar =>
          {
              toolbar.Create();
              toolbar.Excel();
              toolbar.Pdf();
          }).ColumnMenu().Editable(editable => editable.Mode(GridEditMode.InLine)).Pageable().Sortable(sortable => { sortable.SortMode(GridSortMode.MultipleColumn); }).Filterable().Scrollable().DataSource(dataSource => dataSource.Ajax().Model(model => model.Id(p => p.Id)).Read(read => read.Action("Clients_Read", "Client")).Create(create => create.Action("Clients_Create", "Client")).Update(update => update.Action("Clients_Update", "Client")).Destroy(destroy => destroy.Action("Clients_Destroy", "Client")))
      )
@section customScripts {
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jszip/2.4.0/jszip.js"></script>
}