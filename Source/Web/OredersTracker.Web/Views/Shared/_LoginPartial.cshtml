@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = string.Empty }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Здравей " + User.Identity.GetUserName() + "!", "Index", "Manage", new { area = string.Empty }, new { title = "Manage" })
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li>@Html.ActionLink("Регистрация", "Register", "Account", new { area = string.Empty }, new { id = "registerLink" })</li>*@
        <li>@Html.ActionLink("Log In", "Login", "Account", new { area = string.Empty }, new { id = "loginLink" })</li>
    </ul>
}
